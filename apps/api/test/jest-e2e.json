{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "roots": ["<rootDir>/test"],
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/db$": "<rootDir>/../../packages/database/src",
    "^@repo/contracts$": "<rootDir>/../../packages/contracts/src"
  }
}
